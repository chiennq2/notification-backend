# .env
PORT=3001

# Firebase Admin SDK Credentials
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=abc123def456...
# Lưu ý: Private key phải giữ nguyên format với \n
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQ...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com

# ===== HOẶC DÙNG BASE64 (ĐƠN GIẢN HƠN) =====
# Encode file serviceAccountKey.json sang base64:
# Linux/Mac: base64 -i serviceAccountKey.json
# Windows PowerShell: [Convert]::ToBase64String([IO.File]::ReadAllBytes("serviceAccountKey.json"))
FIREBASE_SERVICE_ACCOUNT_